<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="430dp"
        android:layout_height="420dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_vector" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/sfuidisplay_light"
        android:text="Welcome to Growth Journey!"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="248dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sfuidiplat_bold"
        android:text="Discover the Power of Growth and Nutrition."
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/articleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_home"
        android:fontFamily="@font/sfuidisplatreguler"
        android:paddingVertical="16dp"
        android:text="Article"
        app:cornerRadius="120dp"
        app:icon="@drawable/article_icon"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/monitorButton"
        app:layout_constraintEnd_toStartOf="@+id/profileButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monitorButton"
        app:layout_constraintTop_toTopOf="@+id/monitorButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_home"
        android:fontFamily="@font/sfuidisplatreguler"
        android:paddingVertical="16dp"
        android:text="Profile"
        app:cornerRadius="120dp"
        app:icon="@drawable/profile_icon"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/monitorButton"
        app:layout_constraintEnd_toStartOf="@+id/childButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/articleButton"
        app:layout_constraintTop_toTopOf="@+id/monitorButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/monitorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_home"
        android:fontFamily="@font/sfuidisplatreguler"
        android:paddingVertical="16dp"
        android:text="Monitor"
        app:cornerRadius="120dp"
        app:icon="@drawable/monitor_icon"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/articleButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.199" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/childButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_home"
        android:fontFamily="@font/sfuidisplatreguler"
        android:paddingVertical="16dp"
        android:text="Child"
        app:cornerRadius="120dp"
        app:icon="@drawable/people_icon"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/monitorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profileButton"
        app:layout_constraintTop_toTopOf="@+id/monitorButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childButton"
        app:layout_constraintVertical_bias="0.172"
        app:srcCompat="@drawable/frame_27__1_" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfuitext_semibold"
        android:text="Populer Menu"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monitorButton"
        app:layout_constraintVertical_bias="0.153" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingVertical="24dp"
        android:paddingStart="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8" />


</androidx.constraintlayout.widget.ConstraintLayout>